<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="upload CSV" HorizontalAlignment="Left" Margin="239,71,0,0" VerticalAlignment="Top" Click="uploadCSVButton_Click"/>
        <TextBox Name="txtEditor" HorizontalAlignment="Left" Margin="41,71,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" Height="231"/>
        <Image HorizontalAlignment="Left" Height="200" Margin="507,95,0,0" VerticalAlignment="Top" Width="200"/>
        <Slider Maximum ="100" Minimum ="0" HorizontalAlignment="Left" Margin="507,335,0,0" VerticalAlignment="Top" Width="200" Value="{Binding VM_PlaybackSpeed}"/>
        <TextBlock HorizontalAlignment="Left" Margin="507,75,0,0" Text="Simulator View:" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Margin="507,314,0,0" Text="Playback speed:" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
    </Grid>
</Window>