        <TextBlock HorizontalAlignment="Left" Margin="12,256,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="48"/>
        <TextBlock HorizontalAlignment="Left" Margin="508,42,0,0" Text="Altimeter:" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Margin="603,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Text="{Binding VM_Altitude, StringFormat = {}{0} feet, Mode=OneWay}"/>
        <TextBlock HorizontalAlignment="Left" Margin="508,63,0,0" Text="Airspeed:" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Margin="603,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Text="{Binding VM_Airspeed, Mode=OneWay, StringFormat=\{0\} knot}"/>
        <TextBlock HorizontalAlignment="Left" Margin="508,84,0,0" Text="Flight Direction:" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Margin="603,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Text="{Binding VM_HeadingDeg, Mode=OneWay, StringFormat=\{0\}°}"/>
