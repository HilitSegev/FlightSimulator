        Title="MainWindow" Height="475" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFFF8C8C" Offset="0.285"/>
            <GradientStop Color="White" Offset="0.779"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button Content="upload CSV" HorizontalAlignment="Left" Margin="216,10,0,0" VerticalAlignment="Top" Click="uploadCSVButton_Click"/>
        <TextBox Name="txtEditor" HorizontalAlignment="Left" Margin="18,10,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" Height="20"/>
        <Slider Maximum ="250" Minimum ="4" HorizontalAlignment="Left" Margin="25,76,0,0" VerticalAlignment="Top" Width="200" Value="{Binding VM_PlaybackSpeed}" RenderTransformOrigin="0.5,0.5">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <TextBlock HorizontalAlignment="Left" Margin="25,55,0,0" Text="Playback speed:" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="playButton" HorizontalAlignment="Left" Margin="0,409,0,0" VerticalAlignment="Top" Height="25" Width="25" Background="#00DDDDDD" Click="playButtonClick">
            <Image  Source="Resources/playButton.png"/>
        </Button>
        <Button x:Name="pauseButton" HorizontalAlignment="Left" Margin="25,409,0,0" VerticalAlignment="Top" Height="25" Width="25" Background="#00DDDDDD" Click="pauseButtonClick">
            <Image Source="Resources/pauseButton.png" Visibility="Visible"/>
        </Button>
        <Button x:Name="stopButton" HorizontalAlignment="Left" Margin="50,409,0,0" VerticalAlignment="Top" Height="25" Width="25" Background="#00DDDDDD" Click="stopButtonClick">
            <Image Source="Resources/stopButton.png"/>
        </Button>
        <Slider HorizontalAlignment="Left" Margin="80,412,0,0" VerticalAlignment="Top" Width="570" Value="{Binding VM_CurrentRow}" Maximum="2000"/>
        <Label Content="00:00:00" HorizontalAlignment="Left" Margin="655,408,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="714,408,0,0" VerticalAlignment="Top" Width="76" SelectedIndex="1">
            <Label Content="x0.5"/>
            <Label Content="x1.0"/>
            <Label Content="x1.5"/>
            <Label Content="x2.0"/>
            <Label Content="x2.5"/>
        </ComboBox>
        <Slider Maximum ="1" Minimum ="-1" HorizontalAlignment="Left" Margin="25,150,0,0" VerticalAlignment="Top" Width="200" Value="{Binding VM_Rudder, Mode=OneWay}" RenderTransformOrigin="0.5,0.5"/>
        <TextBlock HorizontalAlignment="Left" Margin="25,129,0,0" Text="Rudder:" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Slider Maximum ="1" Minimum ="0" HorizontalAlignment="Left" Margin="25,213,0,0" VerticalAlignment="Top" Width="200" Value="{Binding VM_Throttle1, Mode=OneWay}" RenderTransformOrigin="0.5,0.5"/>
        <TextBlock HorizontalAlignment="Left" Margin="25,192,0,0" Text="Throttle1:" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Slider Maximum ="1" Minimum ="0" HorizontalAlignment="Left" Margin="25,256,0,0" VerticalAlignment="Top" Width="200" Value="{Binding VM_Throttle2, Mode=OneWay}" RenderTransformOrigin="0.5,0.5"/>
        <TextBlock HorizontalAlignment="Left" Margin="25,235,0,0" Text="Throttle2:" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <ProgressBar HorizontalAlignment="Left" Height="10" Margin="988,319,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBlock HorizontalAlignment="Left" Margin="12,150,0,0" Text="-1" TextWrapping="Wrap" VerticalAlignment="Top" Width="49"/>
        <TextBlock HorizontalAlignment="Left" Margin="231,150,0,0" Text="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="49"/>
        <TextBlock HorizontalAlignment="Left" Margin="231,213,0,0" Text="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="49"/>
