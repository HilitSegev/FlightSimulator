        <TextBlock HorizontalAlignment="Left" Margin="603,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Text="{Binding VM_Pitch, Mode=OneWay, StringFormat=\{0\}°}"/>
        <TextBlock HorizontalAlignment="Left" Margin="508,126,0,0" Text="Roll:" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Margin="603,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Text="{Binding VM_Roll, Mode=OneWay, StringFormat=\{0\}°}"/>
        <TextBlock HorizontalAlignment="Left" Margin="508,147,0,0" Text="Yaw:" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Margin="603,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Text="{Binding VM_Yaw, Mode=OneWay, StringFormat=\{0\}°}"/>

